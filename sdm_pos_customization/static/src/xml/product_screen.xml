<?xml version="1.0" encoding="UTF-8" ?>
<template id="template" xml:space="preserve">
    <t t-name="sdm_pos_customization.ProductScreen" t-inherit="point_of_sale.ProductScreen" t-inherit-mode="extension">
        <xpath expr="//ProductCard" position="attributes">
            <attribute name="name">product.name</attribute>
            <attribute name="barcode">product.barcode or ""</attribute>
            <attribute name="lst_price">product.lst_price</attribute>
            <attribute name="qty_available">product.qty_available</attribute>
        </xpath>
    </t>
</template>

